#####################################################################
# After restart
#####################################################################

- alias: "Initialization after restart: Mirko"
  trigger:
    platform: homeassistant
    event: start
  action:
    service: input_select.select_option
    data_template:
      entity_id: input_select.mirko_state
      option: > 
        {% if is_state("group.mirko", "home") %}
          Home
        {% else %}
          Away
        {% endif %}

